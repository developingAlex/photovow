<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Title</th>
      <th>Venue</th>
      <th>City</th>
      <th>Country</th>
      <th>Content</th>
      <th>Date</th>
      <th>Accepted offer</th>
      <th>Date accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.owner %></td>
        <td><%= listing.title %></td>
        <td><%= listing.venue %></td>
        <td><%= listing.city %></td>
        <td><%= listing.country %></td>
        <td><%= listing.content %></td>
        <td><%= listing.date %></td>
        <td><%= listing.accepted_offer %></td>
        <td><%= listing.date_accepted %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

