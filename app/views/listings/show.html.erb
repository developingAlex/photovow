<p id="notice"><%= notice %></p>

<p>
  <strong><%= @listing.title %></strong>
</p>  

<p>
  <strong>Location:</strong>
  <%= @listing.venue %>, <%= @listing.city %>, <%= @listing.country %>
</p>

<p>
  <strong>Date:</strong>
  <%= @listing.date %>
</p>

<p>
  <%= @listing.content %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @listing.owner.fullname %>
</p>
<% already_offered = user_already_offered(current_user, @listing) %>
<% if already_offered %>
  <p id="already-offered-notice"> you have offered to work this wedding for <%= number_to_currency(@offer.amount) %> </p>
<% end %>
<% if current_user != @listing.owner %>
  <%= render 'offer_form', listing: @listing, offer: @offer, user_already_applied: @user_already_applied %>
<% else %>
  <%= link_to 'Edit', edit_listing_path(@listing) %> 
<% end %>
