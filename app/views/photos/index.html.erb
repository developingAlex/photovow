<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Image data</th>
      <th>Portfolio</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.image_data %></td>
        <td><%= photo.portfolio %></td>
        <td><%= photo.description %></td>
        <td><%= link_to 'Show', portfolio_photo_path(@portfolio, photo) %></td>
        <td><%= link_to 'Edit', edit_portfolio_photo_path(@portfolio, photo) %></td>
        <td><%= link_to 'Destroy', portfolio_photo_path(@portfolio, photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_portfolio_photo_path(@portfolio) %>
