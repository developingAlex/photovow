<p id="notice"><%= notice %></p>

<p>
  <% if !@photo.image_data.empty? && !@photo.image_data.nil? %>
    <%= image_tag @photo.image[:large].url %>
  <% end %>
</p>

<p>
  <%= "by #{@photo.portfolio.user.first_name}" %>
</p>

<p>
  <%= @photo.description %>
</p>
<% if @photo.portfolio.user == current_user %>
  <%= link_to 'Edit', edit_portfolio_photo_path(@portfolio, @photo) %> | 
  <%= link_to 'Delete', portfolio_photo_path(@portfolio, @photo), method: :delete %> | 
<% end %>

<%= link_to "Back to #{@portfolio.user.first_name}\'s portfolio", @portfolio %>
  
