<%= form_with(model: portfolio, local: true) do |form| %>
  <% if portfolio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
      <% portfolio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio, id: :portfolio_bio %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :portfolio_user_id %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :portfolio_image %>
  </div>
  <%- if @portfolio.image_data? %>
    <div class="field">
      <%#= image_tag @portfolio.avatar_image_url(:thumb) %>
    </div>
    <div class="field">
      Remove attachment: <%= form.check_box :remove_image %>
    </div>
  <%- end %>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, id: :portfolio_city %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country, id: :portfolio_country %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
